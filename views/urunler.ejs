    <div class="container my-4">
        <div class="row">
            <div class="col-md-3">
                <!-- Filtreleme Seçenekleri -->
                <h4>Filtrele</h4>
                <div class="mb-3">
                    <h5>Kategori</h5>
                    <select class="form-control">
                        <option>Tümü</option>
                        <option>Kategori 1</option>
                        <option>Kategori 2</option>
                        <option>Kategori 3</option>
                        <!-- Diğer kategoriler buraya eklenebilir -->
                    </select>
                </div>
                <!-- Fiyat Aralığı Filtresi -->
                <div class="mb-3">
                    <h5>Fiyat Aralığı</h5>
                    <input type="range" class="form-range" id="priceRange" min="0" max="1000" step="50" value="0">
                    <p>Seçilen Fiyat: <span id="priceValue">0</span> TL</p>
                </div>
                <!-- Renk Filtresi -->
                <div class="mb-3">
                    <h5>Renk</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="color1">
                        <label class="form-check-label" for="color1">
                            Renk 1
                        </label>
                        <div class="color-sample" style="background-color: #FF5733;"></div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="color2">
                        <label class="form-check-label" for="color2">
                            Renk 2
                        </label>
                        <div class="color-sample" style="background-color: #3498db;"></div>
                    </div>
                    <!-- Diğer renkler buraya eklenebilir -->
                </div>
                <!-- Uygula Düğmesi -->
                <button type="button" class="btn btn-primary">Filtrele</button>
      
            </div>
            <div class="col-md-9">
                <!-- Ürünler -->
                <h2 class="mb-4">Ürünler</h2>
                <div class="row">
                    <!-- Ürün kartları buraya eklenir -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card">
                            <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Ürün Resmi">
                            <div class="card-body">
                                <h5 class="card-title">Ürün Adı</h5>
                                <p class="card-text">Ürün açıklaması buraya gelecek.</p>
                                <a href="#" class="btn btn-primary">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <!-- Diğer ürün kartları buraya eklenir -->
                </div>
            </div>
        </div>
    </div>

 
        <footer class="bg-dark text-white py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Hakkımızda</h5>
                        <p>Yakında Sizlerle.</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Bağlantılar</h5>
                        <ul class="list-unstyled">
                            <li><a href="/">Anasayfa</a></li>
